@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Delete</h2>
            <hr />
        </div>
        @*  <div asp-validation-summary="ModelOnly"></div> *@
        <div class="row mb-3 p-1">
            <label asp-for="Category.CategoryName" class="p-0"></label>
            @* <input asp-for="CategoryName" disabled class="form-control" /> *@
            <input asp-for="Category.CategoryName" readonly class="form-control" />

        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            @* <input asp-for="DisplayOrder" disabled class="form-control" /> *@
            <input asp-for="Category.DisplayOrder" readonly class="form-control" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit"
                        class="btn btn-danger form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" 
                   class="btn btn-outline-secondary form-control">Back to the list</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}




